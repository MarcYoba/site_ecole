{% extends 'base.html.twig' %}

{% block title %}Download!{% endblock %}

{% block body %}
{# templates/pdf/example.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }
        
        body {
            background: linear-gradient(135deg, #1a2a6c, #b21f1f, #1a2a6c);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        .print-container {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
            padding: 20px;
        }
        
        .student-card {
            width: 85.6mm;
            height: 53.98mm;
            background: white;
            border-radius: 4.5mm;
            overflow: hidden;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.4);
            position: relative;
            transform: scale(1.5); /* Agrandissement pour prévisualisation */
            transform-origin: center;
            margin: 20px auto;
        }
        
        .card-header {
            background: #0d47a1;
            color: white;
            padding: 3.5mm 0;
            text-align: center;
            position: relative;
            height: 14mm;
        }
        
        .card-header::after {
            content: "";
            position: absolute;
            bottom: -4.5mm;
            left: 0;
            width: 100%;
            height: 5mm;
            background: url("");
            background-size: cover;
        }
        
        .college-name {
            font-size: 3.1mm;
            font-weight: bold;
            letter-spacing: 0.1mm;
            line-height: 1.2;
            padding: 0 4mm;
        }
        
        .card-body {
            padding: 4mm 4mm 2mm;
        }
        
        .student-info {
            border-bottom: 1px dashed #ddd;
            padding-bottom: 2mm;
            margin-bottom: 2mm;
        }
        
        .student-name {
            font-size: 4.2mm;
            font-weight: 700;
            margin-bottom: 1mm;
            color: #0d47a1;
        }
        
        .info-label {
            font-weight: 600;
            color: #555;
            display: inline-block;
            width: 30mm;
            font-size: 3mm;
        }
        
        .info-value {
            font-size: 3mm;
        }
        
        .card-footer {
            background: #f8f9fa;
            padding: 2mm 3mm;
            text-align: center;
            font-weight: 600;
            color: #0d47a1;
            font-style: italic;
            border-top: 1px solid #eaeaea;
            font-size: 2.8mm;
        }
        
        .college-logo {
            position: absolute;
            top: 2.5mm;
            right: 3mm;
            width: 7mm;
            height: 7mm;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            color: white;
            font-size: 4mm;
        }
        
        .id-photo {
            position: absolute;
            top: 16mm;
            right: 4mm;
            width: 20mm;
            height: 24mm;
            background: #f0f4f8;
            border: 0.5px solid #ddd;
            border-radius: 1mm;
            display: flex;
            justify-content: center;
            align-items: center;
            color: #ccc;
            overflow: hidden;
        }
        
        .id-photo-placeholder {
            text-align: center;
            padding: 1mm;
        }
        
        .id-photo-placeholder i {
            font-size: 8mm;
            color: #bbb;
            margin-bottom: 1mm;
        }
        
        .id-photo-placeholder div {
            font-size: 2.5mm;
        }
        
        .course-badge {
            background: #e3f2fd;
            color: #0d47a1;
            padding: 0.8mm 2mm;
            border-radius: 3mm;
            font-weight: 600;
            font-size: 3mm;
            display: inline-block;
            margin-top: 0.5mm;
        }
        
        .admission-number {
            font-size: 3.2mm;
            font-weight: 700;
            color: #0d47a1;
            text-align: center;
            letter-spacing: 0.2mm;
            margin-top: 1mm;
        }
        
        .validity {
            display: flex;
            justify-content: space-between;
            margin-top: 1.5mm;
            padding-top: 1.5mm;
            border-top: 1px dashed #ddd;
            font-size: 2.8mm;
        }
        
        .validity-item {
            text-align: center;
            flex: 1;
        }
        
        .validity-label {
            font-weight: 600;
            color: #666;
            font-size: 2.5mm;
        }
        
        .controls {
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
            max-width: 400px;
            margin-left: 30px;
        }
        
        .controls h3 {
            color: #0d47a1;
            margin-bottom: 20px;
            text-align: center;
        }
        
        .btn-group {
            display: flex;
            gap: 10px;
            margin-top: 20px;
        }
        
        
        .dimensions {
            background: #f8f9fa;
            padding: 15px;
            border-radius: 5px;
            text-align: center;
            margin-top: 20px;
            font-size: 14px;
        }
        
        .dimensions h4 {
            color: #0d47a1;
            margin-bottom: 10px;
        }
        
        .note {
            font-size: 12px;
            color: #666;
            margin-top: 20px;
            text-align: center;
            max-width: 300px;
        }
        
        @media print {
            body, html {
                background: white;
                margin: 0;
                padding: 0;
            }
            
            .student-card {
                transform: scale(1) !important;
                margin: 0 !important;
                box-shadow: none !important;
                page-break-inside: avoid;
            }
            
            .controls, .note, .print-header {
                display: none;
            }
            
            .print-container {
                padding: 0;
                width: 85.6mm;
                height: 53.98mm;
            }
        }
    </style>
</head>
<body>

        <div class="container mt-4">
        <h1>Liste des eleve {{ecoles.nom}}</h1>
        
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <tbody>
                  {% set valeur = 0 %}
                    {% for eleve in eleves %}
                        
                        {% if valeur == 0 %}
                            <tr>
                        {% endif %}
                        <td>
                                <div class="controls">
                                    <!-- En-tête de la carte -->
                                    <div class="card-header">
                                        <div class="college-name">{{ecoles.nom}}</div>
                                        <div class="college-logo">
                                            <i class="fas fa-graduation-cap"></i>
                                        </div>
                                    </div>
                                    
                                    <!-- Corps de la carte -->
                                    <div class="card-body">
                                        
                                           <div class="id-photo">
                                                <div class="id-photo-placeholder">
                                                    <i class="fas fa-user"></i>
                                                    <div>Photo</div>
                                                </div>
                                            </div>
                                        
                                        
                                        <div class="student-info">
                                            <div class="student-name">{{ eleve.nom }}</div>
                                            
                                            <div class="mb-1">
                                                <span class="info-label">NE le</span>
                                                <span class="">{{ eleve.naissance | date('Y-m-d') }}</span>
                                            </div>
                                            
                                            <div class="mb-1">
                                                <span class="info-label">Classe</span>
                                                <span class="">{{ eleve.classe.nom }} </span>
                                            </div>
                                            
                                            <div class="mb-1">
                                                <span class="info-label">Pere/ Mere</span>
                                                <span class="">{{ eleve.pere }} / {{ eleve.mere }}</span>
                                            </div>
                                            
                                            <div class="mb-1">
                                                <span class="">Telephone/ Matricule </span>
                                                <span class="course-badge">{{ eleve.telephone }} / {{ eleve.matricule }}</span>
                                            </div>
                                        </div>
                                        
                                    </div>
                                    
                                    <!-- Pied de page de la carte -->
                                </div>
                        </td>
                        {% set valeur = valeur + 1 %}   
                        {% if valeur > 2 %}
                            </tr>
                             {% set valeur = 0 %}
                        {% endif %}
                    {% endfor %}
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
{% endblock %}
