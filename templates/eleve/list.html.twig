{% extends 'base.html.twig' %}

{% block title %}List Eleve{% endblock %}

{% block body %}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Carte d'Étudiant - Calctech Innovations</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="{{ asset('css/barge.css') }}" rel="stylesheet">
</head>
<body>
    <a href="{{ path('app_eleve') }}">
        <div class="card border-left-danger shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            <i class="fas fa-plus fa-2x text-gray-300"></i>  AJOUTER UN ELEVE
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </a>
        
    <div class="student-card">
        <!-- En-tête de la carte -->
        {% for eleve in eleves %}
        <div class="card-header">
            <h3 class="mb-0">YOBS TIE</h3>
            <div class="college-logo">
                <i class="fas fa-graduation-cap"></i>
            </div>
        </div>
        
        <!-- Corps de la carte -->
        <div class="card-body">
            <div class="id-photo">
                <div class="id-photo-placeholder">
                    <i class="fas fa-user"></i>
                    <div>Photo</div>
                </div>
            </div>
            
                
            <div class="student-info">
                <div class="student-name">{{ eleve.nom }}</div>
                
                <div class="mb-2">
                    <span class="info-label">matricule</span>
                    <span>{{ eleve.matricule }}</span>
                </div>
                
                <div class="mb-2">
                    <span class="info-label">Date naissance</span>
                    <span>{{ eleve.naissance | date('Y-m-d') }}</span>
                </div>
                
                <div class="mb-3">
                    <span class="info-label">Ville</span>
                    <span>{{ eleve.ville }}</span>
                </div>
                
                <div>
                    <span class="info-label">Pere</span>
                    <div class="course-badge">{{ eleve.pere }}</div>
                </div>
                <div>
                    <span class="info-label">Mere</span>
                    <div class="course-badge">{{ eleve.mere }}</div>
                </div>
            </div>
            
            <div class="admission-number">
                Telephone : {{ eleve.telephone }}
            </div>
            
            <div class="validity">
                <div class="validity-item">
                    <div class="validity-label">Classe</div>
                    <div>{{ eleve.classe.nom }}</div>
                </div>
                <div class="validity-item">
                    <div class="validity-label">VALID UNTIL</div>
                    <div>01 Dec 2026</div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-6">
                    <a class="btn btn-primary"href="{{ path('app_eleve_details') }}">Details</a>
                </div>
                <div class="col-md-6">
                    <a class="btn btn-warning"href="">Edition</a>
                </div>
            </div>
        </div>
        
        <!-- Pied de page de la carte -->
        <footer class="text-center text-white mt-5">
            <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
                © YOBS PRODUCTIONS {{ 'now'|date('Y') }} - Tous droits réservés
            </div>
        </footer>
        {% endfor %}
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


{% endblock %}